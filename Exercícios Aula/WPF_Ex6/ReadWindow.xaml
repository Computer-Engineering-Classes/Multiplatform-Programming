<Window x:Class="WPF_Ex6.ReadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Leitura do ficheiro" Height="400" Width="400">
    <Grid>
        <TextBox x:Name="tbConteudo" IsEnabled="False" HorizontalAlignment="Center" Height="364" TextWrapping="Wrap" VerticalAlignment="Center" Width="380" AcceptsReturn="True" VerticalScrollBarVisibility="Visible">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="Copy"/>
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>
    </Grid>
</Window>
