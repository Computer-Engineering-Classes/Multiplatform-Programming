<Window x:Class="WPF_Ex9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="250" Width="550">
    <Grid>
        <ProgressBar x:Name="pbBateria" HorizontalAlignment="Center" Height="100" VerticalAlignment="Top" Width="372" Margin="0,25,0,0"/>
        <Button x:Name="btDescarregar" Content="−" VerticalContentAlignment="Top" HorizontalAlignment="Left" Margin="16,25,0,0" VerticalAlignment="Top" Width="48" Height="100" FontSize="64" Click="BtDescarregar_Click"/>
        <Button x:Name="btCarregar" Content="+" VerticalContentAlignment="Top" HorizontalAlignment="Left" Margin="484,25,0,0" VerticalAlignment="Top" Width="48" Height="100" FontSize="64" Click="BtCarregar_Click"/>
        <StatusBar Margin="16,150,18,23">
            <StackPanel Orientation="Vertical">
                <TextBlock Name="TbCharge" Text="Total carregado: 0%" TextWrapping="Wrap" Width="483"/>
                <TextBlock Name="TbDischarge" Text="Total descarregado: 0%" TextWrapping="Wrap" Width="483"/>
            </StackPanel>
        </StatusBar>
    </Grid>
</Window>
